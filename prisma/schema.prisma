// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                    String      @id @default(auto()) @map("_id") @db.ObjectId
  username              String      @unique
  email                 String      @unique
  first_name            String
  last_name             String?
  password              String
  dob                   DateTime?
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  posts                 Post[]
  joinedCommunities     Community[] @relation("joinedCommunities", fields: [joindedCommunitiesIds], references: [id])
  joindedCommunitiesIds String[]    @db.ObjectId
  ownedCommunities      Community[] @relation("ownedCommunities")
  ownedCommunitiesIds   String[]    @db.ObjectId
}

model Post {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  body        String
  publishedAt DateTime  @default(now())
  publishedBy User      @relation(fields: [u__id], references: [id])
  u__id       String    @db.ObjectId
  community   Community @relation(fields: [c__id], references: [id])
  c__id       String    @db.ObjectId
}

model Community {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  c_name       String   @unique
  c_owner      User     @relation("ownedCommunities", fields: [owner__id], references: [id])
  owner__id    String   @db.ObjectId
  posts        Post[]
  members      User[]   @relation("joinedCommunities", fields: [membersIds], references: [id])
  membersIds   String[] @db.ObjectId
  membersCount Int      @default(0)
}
